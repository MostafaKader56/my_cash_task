<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/_8dp" />
            <stroke android:width="@dimen/_1dp" android:color="@color/color_light_gray" />
        </shape>
    </item>
    <!-- Inner shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8dp" />
            <gradient
                android:angle="90"
                android:centerY="0.01"
                android:startColor="@color/color_black_10"
                android:centerColor="@color/color_black_4"
                android:endColor="@color/transparent"
                android:type="linear" />
        </shape>
    </item>
</layer-list>